<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="259dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="31dp"
            android:layout_toStartOf="@+id/text_view_countdown"
            android:text="       Player 1: 0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/arrow_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/text_view_p1"
            android:layout_marginStart="0dp"
            android:src="@drawable/arrow_1" />

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="255dp"
            android:layout_height="53dp"
            android:layout_below="@+id/text_view_p1"
            android:layout_marginTop="-12dp"
            android:text="       Player 2: 0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/arrow_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/arrow_2"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-49dp"
            android:layout_toStartOf="@+id/text_view_p2"
            android:src="@drawable/arrow_1" />


        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="84dp"
            android:layout_height="71dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:text="03:00"
            android:textSize="30sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60sp" />

    </LinearLayout>

</LinearLayout>
